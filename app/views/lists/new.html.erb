<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1598899134739-24c46f58b8c0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1712&q=80);">
  <div class="container text-center">
    <h1>Add a New List!</h1>
  </div>
</div>

<div class="container">
  <div class="container">
    <%= simple_form_for(@list) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Add your List!" %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to root_path, { class: "btn btn-outline-dark" } do %>
      <span class="label label-primary">Home</span>
    <% end %>
  </div>

</div>
