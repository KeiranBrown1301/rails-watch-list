<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, crop: :fill %>')">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>


<div class="container ">
  <div class="container">
    <div class="d-flex justify-content-center">
      <%= link_to new_list_bookmark_path(@list), { class: "btn btn-outline-dark" } do %>
        <span class="label label-primary">Add a Movie</span>
      <% end %>
    </div>
  </div>

  <div class="container m-5">
    <div class="row">
        <% @list.movies.each do |movie| %>
          <div class="col-md-6">
            <div class="card" style="width: 18rem;">
              <img src="<%= movie.poster_url %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= movie.title %></h5>
                <p class="card-text"><%= movie.overview %></p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Rating - <%= movie.rating %>/10</li>
                <li class="list-group-item">
                  <% movie.bookmarks.each do |bookmark| %>
                    <%= bookmark.comment %>
                    <%= link_to "Remove this comment", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        <% end %>
    </div>
  </div>


  <div class="d-flex justify-content-center">
    <%= link_to root_path, { class: "btn btn-outline-dark" } do %>
      <span class="label label-primary">Home</span>
    <% end %>
  </div>

</div>
