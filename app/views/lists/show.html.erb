<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1598899134739-24c46f58b8c0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1712&q=80);">
  <div class="container text-center">
    <h1>Your list!</h1>
  </div>
</div>


<div class="container">
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

  <h1>List Details</h1>
  <h2><%= @list.name %></h2>

  <div class="container">
    <%= link_to "Add Movie", new_list_bookmark_path(@list) %>
  </div>

  <div class="container">
    <ul>
      <% @list.movies.each do |movie| %>
        <li>
          <%= movie.title %>
        </li>
        <% movie.bookmarks.each do |bookmark| %>
          <%= bookmark.comment %> -
          <%= link_to "Remove this comment?", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      <% end %>
    </ul>
  </div>


  <%= link_to "Top", lists_path %>

</div>
